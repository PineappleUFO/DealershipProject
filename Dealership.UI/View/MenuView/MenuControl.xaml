<UserControl x:Class="Dealership.UI.View.MenuView.MenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dealership.UI.View.MenuView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" >
            <Button FontSize="24" Height="60" Command="{Binding UpdateViewCommand}" CommandParameter="Home">Home</Button>
            <Button FontSize="24" Height="60" Command="{Binding UpdateViewCommand}" CommandParameter="Order">Navigate Order</Button>
            <Button FontSize="24" Height="60" Command="{Binding UpdateViewCommand}" CommandParameter="Catalog">Navigate Catalog</Button>
        </StackPanel>
    </Grid>
</UserControl>
