<Window x:Class="Dealership.UI.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Dealership.UI"
        xmlns:view="clr-namespace:Dealership.UI.View"
        mc:Ignorable="d"
        Title="Дилерский центр" d:DesignHeight="1080" d:DesignWidth="1900">

    <Window.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Verdana"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
           
        </Style>
    </Window.Resources>

    <Grid ShowGridLines="True">

        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DockPanel Background="#FF8A65" Grid.ColumnSpan="2">
            <Button Width="auto" DockPanel.Dock="Right" Margin="5" HorizontalAlignment="Right">%Setting icon%</Button>
        </DockPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" >
            <Button FontSize="24" Height="60" Command="{Binding UpdateViewCommand}" CommandParameter="Home">Home</Button>
            <Button FontSize="24" Height="60" Command="{Binding UpdateViewCommand}" CommandParameter="Order">Navigate Order</Button>
            <Button FontSize="24" Height="60" Command="{Binding UpdateViewCommand}" CommandParameter="Catalog">Navigate Catalog</Button>
        </StackPanel>


        <ContentControl Grid.Column="1" Grid.Row="1" Content="{Binding SelectedViewModel}"/>
    </Grid>

</Window>
